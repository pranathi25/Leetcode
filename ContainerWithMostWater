class Solution {
public:
    int maxArea(vector<int>& height) {
        int l = 0;
        int r = height.size() - 1;
        int max_area =0;
        while (l < r) {
            int width = r - l;
            int heightR =  (height[l] < height[r]) ? height[l] : height[r];
            int area = width * heightR;

            if (area > max_area) max_area = area;

            if (height[l] > height[r])
               r--;
            else l++; 
        }
        return max_area;
    }
};
